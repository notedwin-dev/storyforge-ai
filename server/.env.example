# Environment variables for StoryForge AI Server
NODE_ENV=development
PORT=3001

# Get JWT_SECRET from Supabase Auth settings
JWT_SECRET=your_jwt_secret_here

# Hugging Face API
HUGGING_FACE_TOKEN=your_hugging_face_token_here

# AI Service API Keys (Add these for enhanced features)
GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs API (optional for voice synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# AWS S3 Storage
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=storyforge-assets

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload limits
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp

# Demo mode settings (set to true for MVP demo)
DEMO_MODE=true

# API URL for frontend
VITE_API_URL=http://localhost:3001/api

# Python Stable Diffusion Configuration
USE_PYTHON_SD=true
PYTHON_SD_URL=http://127.0.0.1:8080
PREFER_PYTHON_SD=true
ENABLE_CLOUD_FALLBACK=false